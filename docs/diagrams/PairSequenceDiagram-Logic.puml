@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant "u:PairCommand" as PairCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box
[-> LogicManager : execute(pair)
activate LogicManager

LogicManager -> AddressBookParser : parseCommand(pair)
activate AddressBookParser

create PairCommand
AddressBookParser -> PairCommand
activate PairCommand

PairCommand --> AddressBookParser
deactivate PairCommand

AddressBookParser --> LogicManager : u
deactivate AddressBookParser

LogicManager -> PairCommand : execute()
activate PairCommand

PairCommand -> Model : getMutableDatastore()
activate Model

Model --> PairCommand
deactivate Model

PairCommand -> Model : setPerson()
activate Model
PairCommand -> Model : setPerson()
PairCommand -> Model : updateFilteredPersonList()

Model --> PairCommand
deactivate Model

PairCommand --> LogicManager : result
deactivate PairCommand
PairCommand -[hidden]-> LogicManager : result
destroy PairCommand

[<--LogicManager
deactivate LogicManager
@enduml
